@model List<Feetup.Models.Category>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Categories
        

    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                    <th>Action</th>

                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@(Model.IndexOf(item)+1)</td>
                        <td>@item.CategoryName</td>
                        <td><a href="../categories/Edit/@(Model.IndexOf(item)+1)">Edit</a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


