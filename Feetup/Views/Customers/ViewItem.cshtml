@model Feetup.Models.ViewItem
@{
    ViewBag.Title = "ViewAd";
   
}

<style>
    td {
        padding: 20px;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-md-12">
        <img src="~/images/banner.jpg" class="img img-responsive" style="width:100%" />

    </div>
</div>

<div class="row">

   


    <div class="col-lg-8 col-md-8">

        <div>
            <h1><small>Prdouct-ID:@Model.ProductID</small></h1>
        </div>

        <img src="@Url.Content(@Model.ProductImage)" style="width:800PX; height:450PX" />

        <div>
            <h1>@Model.ProductName</h1>
            <h3>Description: </h3>
            <p>@Model.ProductDescription</p>
        </div>

        <table>

            <tr> <td>Price: </td> <td>@Model.ProductPrice </td> </tr>
            <tr> <td>Brand: </td> <td>@Model.ProductBrand </td> </tr>
            <tr> <td>Color: </td> <td>@Model.ProductColor </td> </tr>
            <tr> <td>Category: </td> <td>@Model.CategoryName </td> </tr>
            <tr> <td>Posted by: </td> <td>@Model.SellerName @*<img src="@Url.Content(@Model.u_image)" style="width:40px; height:40px" />*@ </td> </tr>
            <tr> <td>Contact: </td> <td>@Model.SellerPhone  </td> </tr>
            <tr>
            <td colspan="2">
                @*@if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_fk_user))
                {*@

                    @Html.ActionLink("Add to cart", "AddCart", new { @class = "btn btn-info", id = Model.ProductID })



                @*}*@
            </td>
        </tr>

        </table>



    </div>




 


</div>