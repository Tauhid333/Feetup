@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPageCustomer.cshtml";
}

<style>
    *{
        padding:0;
        margin:0;
        font-family:sans-serif;
    }
    body{
        background:#000;

    }
    .container {
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        
    }
        .container span {
            color: white;
            text-transform: uppercase;
            display: block;
            
        }
    .text1 {
        font-size: 30px;
        font-weight: 500;
        letter-spacing: 7px;
        margin-bottom: 20px;
        color: white;
        transition: .3s ease;
    }
        .text1:hover {
            color: #6ab04c;
            font-size: 60px;
        }


</style>


<div class="container">
    <span>@Html.ActionLink("User Login", "login", "Customers", new { Area = "" }, new { @class = "text1" })</span>
    <span>@Html.ActionLink("Seller Login", "login", "Sellers", new { Area = "" }, new { @class = "text1" })</span>
</div>


